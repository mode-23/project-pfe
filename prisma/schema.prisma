model Task {
  id          Int                 @id @default(autoincrement())
  name        String
  date        DateTime            @default(now())
  status      String
  deletedAt   DateTime?
  updatedAt   DateTime?           @updatedAt
  project     String
  processName String
  taskprocess ProcessInstanceLog? @relation(fields: [processId], references: [id])
  processId   Int?
}

model ProcessInstanceLog {
  id        Int       @id @default(autoincrement())
  name      String
  status    String
  date      DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  task      Task[]
}
