generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  role      String
  createdAt DateTime  @default(now())
  deletedAt DateTime?
}

model Projects {
  id          String   @id @default(cuid())
  name        String
  processList String[]
}

